{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schemas.data.amsterdam.nl/dataset@v1.1.1",
  "type": "object",
  "allOf": [
    {
      "$ref": "./schema@v1.1.1#/definitions/basicProperties"
    }
  ],
  "required": ["tables", "version", "status", "provenance"],
  "properties": {
    "authorizationGrantor": {
      "type": "string"
    },

    "accrualPeriodicity": {
      "type": "string"
    },

    "contactPoint": {
      "description": "Person and (optional) e-mail.",
      "$ref": "./schema@v1.1.1#/definitions/contactPoint"
    },

    "crs": {
      "description": "Coordinate reference system",
      "type": "string",
      "enum": ["EPSG:28992", "EPSG:4326"]
    },

    "hasBeginning": {
      "type": "string",
      "format": "date-time"
    },

    "hasEnd": {
      "type": "string",
      "format": "date-time"
    },

    "homepage": {
      "type": "string",
      "format": "uri"
    },

    "keywords": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },

    "language": {
      "type": "string",
      "minLength": 2,
      "maxLength": 3
    },

    "legalBasis": {
      "type": "string"
    },

    "objective": {
      "type": "string"
    },

    "owner": {
      "type": "string"
    },

    "publisher": {
      "type": "string"
    },

    "provenance": {
      "type": "string"
     
    },

    "spatial": {
      "type": "string"
    },

    "spatialCoordinates": {
      "$ref": "https://geojson.org/schema/Geometry.json"
    },

    "spatialDescription": {
      "type": "string"
    },

    "status": {
      "type": "string"
    },

    "tables": {
      "type": "array",
      "minItems": 1,
      "items": {
        "oneOf": [
          {
            "$ref": "https://raw.githubusercontent.com/cvriel/amsterdam-schema/master/table.json"
          },
          {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "$ref": {
                "type": "string",
                "format": "uri-reference"
              }
            }
          }
        ]
      }
    },

    "temporalUnit": {
      "type": "string"
    },

    "theme": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },

    "type": {
      "const": "dataset"
    },
    "version": {
      "$ref": "./schema@v1.1.1#/definitions/version"
    }
  }
}
